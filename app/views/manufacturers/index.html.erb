<p id="notice">

<h1>Список производителей</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Наименование', manufacturers_path(iluha: :title) %></th>
      <th>Описание</th>
      <th><%= link_to 'Страна', manufacturers_path(iluha: :country) %></th>
      <th><%= link_to 'Город', manufacturers_path(iluha: :city) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= link_to manufacturer.title, manufacturer %></td>
        <td><%= manufacturer.description %></td>
        <td><%= manufacturer.country %></td>
        <td><%= manufacturer.city %></td>        
        <td><%= link_to 'Редактировать', edit_manufacturer_path(manufacturer), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Удалить', manufacturer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить производителя', new_manufacturer_path, class: 'btn btn-primary' %>
