<p id="notice"><%= notice %></p>

<h1>Новости</h1>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Описание</th>
      <th>Изображение</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tidings.each do |tiding| %>
      <tr>
        <td><%= tiding.title %></td>
        <td><%= tiding.description %></td>
        <td><%= image_tag tiding.image_url.small.url %></td>
        <td><%= link_to 'Показать', tiding %></td>
        <td><%= link_to 'Редактировать', edit_tiding_path(tiding) %></td>
        <td><%= link_to 'Удалить', tiding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новость', new_tiding_path %>
